<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dismiss"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_85"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/datails_shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <RelativeLayout
            android:id="@+id/one"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imf"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@mipmap/kk"
                    />
                <TextView
                    android:layout_width="@dimen/dp_350"
                    android:layout_height="@dimen/dp_40"
                    android:layout_toRightOf="@+id/imf"
                    android:text="Hi!我是你的小鲨鱼，有什么可以帮到您？"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:paddingTop="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_25"
                    android:background="@drawable/customershape"

                    />
            </RelativeLayout>
        </RelativeLayout>
        <EditText
            android:layout_width="@dimen/dp_291"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:hint="请输入文字"
            android:textSize="12sp"
            android:textColor="#a9a9a9"
            android:paddingTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/customershape"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <ImageView
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/mycustomer"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            />
    </RelativeLayout>
</RelativeLayout>