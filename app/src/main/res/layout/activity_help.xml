<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:orientation="vertical"
    tools:context=".activity.HelpActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_71"
        android:background="#72B8FF"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/back"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:text="帮助中心"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_5"
            android:text="产品反馈"
            android:background="#fff"
            android:textSize="15sp"
            android:textColor="#000000"
            android:paddingLeft="@dimen/dp_17"
            android:paddingTop="@dimen/dp_14"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/rightback"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_17"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_1"
            android:text="用户帮助"
            android:background="#fff"
            android:textSize="15sp"
            android:textColor="#000000"
            android:paddingLeft="@dimen/dp_17"
            android:paddingTop="@dimen/dp_14"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/rightback"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_17"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_9"
            android:text="鲨鱼规则"
            android:background="#fff"
            android:textSize="15sp"
            android:textColor="#000000"
            android:paddingLeft="@dimen/dp_17"
            android:paddingTop="@dimen/dp_14"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/rightback"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_17"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_1"
            android:text="陪玩协议"
            android:background="#fff"
            android:textSize="15sp"
            android:textColor="#000000"
            android:paddingLeft="@dimen/dp_17"
            android:paddingTop="@dimen/dp_14"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/rightback"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_17"
            />
    </RelativeLayout>
        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服电话：400-000-0000"
            android:textSize="9sp"
            android:layout_marginTop="@dimen/dp_0_460"
            android:layout_gravity="center"
            android:textColor="#7c7c7c"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前版本v1.0"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="9sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#7c7c7c"/>
    </RelativeLayout>

</LinearLayout>